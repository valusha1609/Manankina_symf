{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <a href="{{ path('admin.app_admin') }}">Админ-панель</a>
        {{ form_start(form, {attr: {"class": "d-inline"}}) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Найти</button>
        {{ form_end(form) }}
        {% for article in articles %}
            <article>
                <h2>{{ article.title }}</h2>
                <div class="article-content">
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Редактировать</a>
                    {{ article.body }}
                </div>
                <div>
                    Дата создания: {{ article.createdAt|date('d.m.Y H:i:s')}}, Автор: {{ article.author }}
                </div>
            </article>

        {% else %}
            По вашему запросу ничего не найдено :(
        {% endfor %}
        {{ pagerfanta(articles) }}
    </div>
{% endblock %}